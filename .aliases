# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

alias ..="cd ../"
alias ...="cd ../../"

#list files
alias l='ls -l ${colorflag}'
#list all files
alias ll='ls -lah ${colorflag}'
#list only directories
alias lld='ls -l | grep "^d"'
